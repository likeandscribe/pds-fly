{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // For strip types support
    "isolatedModules": true,
    "erasableSyntaxOnly": true,
    "checkJs": true,
    "allowJs": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src"]
}
